# AI Job Matcher - Environment Configuration
# Copy this file to .env and fill in your values

# Database
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=job_matcher
DB_USER=job_matcher
DB_PASSWORD=your_db_password_here
DATABASE_URL=postgresql://job_matcher:your_db_password_here@127.0.0.1:5432/job_matcher

# OpenAI (for AI job scoring)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini

# Google Gemini (for CV enhancement)
GEMINI_API_KEY=your-gemini-api-key-here

# Telegram Notifications
# Get your bot token from @BotFather on Telegram
# Get your chat ID by messaging @userinfobot
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_CHAT_ID=your-chat-id-here

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM=your-email@gmail.com
ALERT_EMAIL_TO=your-email@gmail.com

# Google Drive (optional - for CV archiving)
RESUME_DOC_ID=your-google-doc-id-here
RESUME_FOLDER_ID=your-google-drive-folder-id-here
GOOGLE_SERVICE_ACCOUNT_FILE=path/to/credentials.json

# Scheduler (optional)
SCHEDULER_ENABLED=false
SCHEDULER_CRON=0 8 * * *
SCHEDULER_BATCH_SIZE=50
